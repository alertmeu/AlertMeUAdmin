<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E2E1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:orientation="horizontal"

        android:weightSum="1">


        <ImageView
            android:id="@+id/back_arrow1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".2"
            android:src="@drawable/left_nev_arrow"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".8"
            android:text="Send Notification"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/CashDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"

            />

        <EditText
            android:id="@+id/titleEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter Title"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="2"
            android:paddingLeft="6dp"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

        <EditText
            android:id="@+id/descEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter Description"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="4"
            android:paddingLeft="6dp"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />
        <EditText
            android:id="@+id/urlEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter URl"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="2"
            android:paddingLeft="6dp"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Submit"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>

